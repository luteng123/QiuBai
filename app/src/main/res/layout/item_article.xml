<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/article_fragment_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <TextView
            android:id="@+id/article_fragment_user_name"
            android:layout_toRightOf="@id/article_fragment_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/article_user_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            />
    <TextView
            android:id="@+id/article_fragment_user_comment"
            android:layout_alignLeft="@id/article_fragment_user_name"
            android:layout_below="@id/article_fragment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论内容"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            />
    <TextView
            android:id="@+id/article_fragment_user_comment_time"
            android:layout_alignLeft="@id/article_fragment_user_name"
            android:layout_below="@id/article_fragment_user_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论时间"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textColor="#63000000"
            />


</RelativeLayout>